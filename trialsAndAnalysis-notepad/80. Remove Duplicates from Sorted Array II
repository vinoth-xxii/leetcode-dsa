class Solution {
    public int removeDuplicates(int[] nums) {
        if(nums.length <= 2){
            return nums.length;
        }

        int left,right;
        left = 2; right = 2;
        while(right < nums.length){
            if(nums[left - 2] != nums[right]){
                left++;
                right++;
            }
            else{
                while(nums[left - 2] == nums[right]){
                    right++;
                }
                nums[left++] = nums[right++];
            }
        }
        return left+1;
    }
}

//if i convert the above code to for-loop
class Solution {
	public int removeDuplicates(int [] nums){
		if(nums.length <= 2){
			return nums.length;
		}
	
	int left = 2;
	
	for(int right = 2; right < nums.length; right++){
		if(nums[left - 2] != nums[right]){
			left++;
		}
		
	}
}

//modifying my previous code
class Solution {
    public int removeDuplicates(int[] nums) {
        if(nums.length <= 2){
            return nums.length;
        }

        int left,right;
        left = 2; right = 2;
        while(right < nums.length){
            if(nums[left - 2] != nums[right]){
				nums[left++] = nums[right++];
            }
            else{
                    right++;
                }
            }
        }
        return left+1;
    }
}